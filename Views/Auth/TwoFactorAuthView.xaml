<Window x:Class="SkyQuizApp.Views.Auth.TwoFactorAuthView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkyQuizApp.Views.Auth"
        mc:Ignorable="d"
        Title="Двофакторна автентифікація - SkyQuizApp" Height="500" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/Images/background.jpg"
                        Stretch="UniformToFill" />
        </Border.Background>

        <Border BorderBrush="{StaticResource MainBorderBrush}"
                Background="{StaticResource MainBackgroundBrush}"
                BorderThickness="2"
                Opacity="0.90"
                CornerRadius="10">

            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="800">

                <Image Source="/Images/logo.png"
                           Width="200" Height="200" />
                <TextBlock Text="Код підтвердження надіслано на вашу адресу електронної пошти."
                           Foreground="{StaticResource GrayTextBrush}"
                           FontSize="20"
                           FontWeight="Medium"
                           FontFamily="Montserrat"
                           TextAlignment="Center"
                           Width="700"
                           Margin="5" />

                <TextBlock Text="Якщо ви не отримали код, перевірте папку спам."
                           Foreground="{StaticResource GrayTextBrush}"
                           FontSize="20"
                           FontWeight="Medium"
                           FontFamily="Montserrat"
                           TextAlignment="Center"
                           Width="600"
                           Margin="0,0,0,5" />

                <TextBox x:Name="txtVerificationCode"
                         Width="280"
                         Height="60"
                         MaxLength="6"
                         FontSize="16"
                         FontWeight="Bold"
                         FontFamily="Montserrat"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         Foreground="{StaticResource WhiteTextBrush}"
                         Background="Transparent"
                         BorderBrush="{StaticResource GrayTextBrush}"
                         BorderThickness="0,0,0,1"
                         CaretBrush="{StaticResource LightGrayBrush}"
                         Text="{Binding EnteredCode, UpdateSourceTrigger=PropertyChanged}" />

                <Button x:Name="btnConfirmCode"
                        Content="Підтвердити"
                        FontSize="16"
                        FontFamily="Montserrat"
                        FontWeight="Medium"
                        Foreground="{StaticResource WhiteTextBrush}"
                        Background="{StaticResource AccentPinkBrush}"
                        Cursor="Hand"
                        Height="45"
                        Width="200"
                        Command="{Binding ConfirmCodeCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        BorderThickness="0"
                        Margin="0,25,0,0">

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="20"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                      HorizontalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Border>
</Window>