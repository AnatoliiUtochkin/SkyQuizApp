<Window x:Class="SkyQuizApp.Views.Admin.AdminMainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkyQuizApp.Views.Admin"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="SkyQuizApp" Height="700" Width="1300"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        WindowStartupLocation="CenterScreen">

    <Border CornerRadius="12" BorderThickness="1">

        <Border BorderBrush="{StaticResource MainBorderBrush}"
                Background="{StaticResource MainBackgroundBrush}"
                BorderThickness="2"
                Opacity="1"
                CornerRadius="10">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border CornerRadius="10,0,0,10" Grid.Column="0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                            <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0" />
                            <GradientStop Color="{StaticResource primaryBackColor2}" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Height="155"
                                    Margin="0,25,0,0"
                                    HorizontalAlignment="Center">
                            <Image Source="/Images/logo.png" Height="150" />
                        </StackPanel>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{StaticResource menuColor1}"
                                     Command="{Binding ShowUsersViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Style="{StaticResource menuButtonIcon}" Icon="User" Tag="{StaticResource menuColor1}" />
                                <TextBlock Text="Користувачі" Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource menuColor2}" Command="{Binding ShowTestsViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Style="{StaticResource menuButtonIcon}" Icon="List" Tag="{StaticResource menuColor1}" />
                                <TextBlock Text="Тести" Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource menuColor3}" Command="{Binding ShowQuestionsViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Style="{StaticResource menuButtonIcon}" Icon="Question" Tag="{StaticResource menuColor1}" />
                                <TextBlock Text="Запитання" Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource menuColor4}" Command="{Binding ShowTestSessionsViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Style="{StaticResource menuButtonIcon}" Icon="Calendar" Tag="{StaticResource menuColor1}" />
                                <TextBlock Text="Сесії" Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource menuColor5}" Command="{Binding ShowAnswersViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Style="{StaticResource menuButtonIcon}" Icon="Pen" Tag="{StaticResource menuColor1}" />
                                <TextBlock Text="Відповіді" Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource menuColor6}" Command="{Binding ShowResultsViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Style="{StaticResource menuButtonIcon}" Icon="ChartPie" Tag="{StaticResource menuColor1}" />
                                <TextBlock Text="Результати" Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource menuColor7}" Command="{Binding ShowLogsViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Style="{StaticResource menuButtonIcon}" Icon="Database" Tag="{StaticResource menuColor1}" />
                                <TextBlock Text="Логи" Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource menuColor8}" Command="{Binding ShowTwoFactorCodesViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Style="{StaticResource menuButtonIcon}" Icon="Webflow" Tag="{StaticResource menuColor1}" />
                                <TextBlock Text="Двофакторні коди" Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource menuColor9}" Command="{Binding ShowSettingsViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Style="{StaticResource menuButtonIcon}" Icon="Bars" Tag="{StaticResource menuColor1}" />
                                <TextBlock Text="Налаштування" Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                </Border>

                <Border CornerRadius="0,9,9,0" Grid.Column="1">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                            <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0" />
                            <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <ContentControl Content="{Binding CurrentView}" />

                        <StackPanel x:Name="pnlControlBar"
                                    Orientation="Horizontal"
                                    FlowDirection="RightToLeft"
                                    Background="Transparent"
                                    HorizontalAlignment="Right"
                                    Margin="0,10,10,0"
                                    Panel.ZIndex="100"
                                    VerticalAlignment="Top">

                            <Button x:Name="btnClose"
                                    BorderThickness="0"
                                    Content="x"
                                    Foreground="{StaticResource WhiteTextBrush}"
                                    FontSize="12"
                                    FontFamily="Montserrat"
                                    Cursor="Hand"
                                    Click="btnClose_Click"
                                    Margin="5,0,0,0"
                                    Height="30">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="{StaticResource AccentPinkBrush}" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource AccentPinkHoverBrush}" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="22" Height="22" CornerRadius="20" Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button x:Name="btnMinimize"
                                    BorderThickness="0"
                                    Content="-"
                                    Foreground="{StaticResource WhiteTextBrush}"
                                    FontSize="16"
                                    FontFamily="Montserrat"
                                    Cursor="Hand"
                                    Click="btnMinimize_Click"
                                    Margin="10,0,0,0"
                                    Height="30">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="{StaticResource AccentBlueBrush}" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource AccentBlueHoverBrush}" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="20" Height="20" CornerRadius="20" Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Border>
</Window>