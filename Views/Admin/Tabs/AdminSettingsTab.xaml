<UserControl x:Class="SkyQuizApp.Views.Admin.Tabs.AdminSettingsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             Background="Transparent">

    <UserControl.Resources>
        <Style x:Key="TransparentTextBox" TargetType="TextBox">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CaretBrush" Value="DarkGray" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="Transparent"
                        CornerRadius="8"
                        BorderBrush="DarkGray"
                        BorderThickness="1">
                            <ScrollViewer x:Name="PART_ContentHost"
                                  Margin="0"
                                  VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AccentButton" TargetType="Button">
            <Setter Property="Background" Value="#6C63FF" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="Margin" Value="0,15,0,0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#807AFF" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SwitchCheckBox" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Width="62" Height="32">
                            <Border x:Name="SwitchBorder"
                                    Background="#555"
                                    CornerRadius="16"
                                    Height="32"
                                    Width="62" />
                            <Ellipse x:Name="SwitchThumb"
                                     Fill="White"
                                     Width="24"
                                     Height="24"
                                     Margin="4"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SwitchBorder" Property="Background" Value="#6C63FF" />
                                <Setter TargetName="SwitchThumb" Property="HorizontalAlignment" Value="Right" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="1000" Height="750">
        <StackPanel Width="625" Margin="30" VerticalAlignment="Center">
            <TextBlock Text="Налаштування акаунту"
                       FontSize="40"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,30"
                       HorizontalAlignment="Center" />

            <Border Background="#2C2F48" Padding="20" CornerRadius="10" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Дата реєстрації акаунту:" Foreground="LightGray" FontSize="16" />
                    <TextBlock Text="{Binding CreatedAtFormatted}" Foreground="White" FontSize="18" FontWeight="SemiBold" />
                </StackPanel>
            </Border>

            <Border Background="#2C2F48" Padding="20" CornerRadius="10" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <StackPanel>
                        <TextBlock Text="Двофакторна автентифікація (2FA)" Foreground="LightGray" FontSize="16" Margin="0,0,20,6" />
                        <TextBlock Text="Увімкнено / вимкнено" Foreground="White" FontWeight="SemiBold" FontSize="16" />
                    </StackPanel>
                    <CheckBox IsChecked="{Binding IsTwoFactorEnabled, Mode=TwoWay}" Style="{StaticResource SwitchCheckBox}" VerticalAlignment="Center" />
                </StackPanel>
            </Border>

            <Border Background="#2C2F48" Padding="20" CornerRadius="10">
                <StackPanel>
                    <TextBlock Text="Email акаунту" Foreground="LightGray" FontSize="16" />
                    <TextBox Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource TransparentTextBox}" Margin="0,10,0,0" BorderThickness="1" />
                    <Button Content="Змінити Email"
                            Command="{Binding ChangeEmailCommand}"
                            Style="{StaticResource AccentButton}"
                            Height="40" Width="150" />
                </StackPanel>
            </Border>

            <Border Background="#2C2F48" Padding="20" CornerRadius="10" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Новий пароль" Foreground="LightGray" FontSize="16" />
                    <TextBox Text="{Binding NewPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource TransparentTextBox}"
                 Margin="0,10,0,0"
                 BorderThickness="1" />
                    <Button Content="Змінити пароль"
                Command="{Binding ChangePasswordCommand}"
                Style="{StaticResource AccentButton}"
                Height="40" Width="150"
                Margin="0,10,0,0" />
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>