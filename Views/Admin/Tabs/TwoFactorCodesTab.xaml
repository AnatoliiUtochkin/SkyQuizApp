<UserControl x:Class="SkyQuizApp.Views.Admin.Tabs.TwoFactorCodesTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1050">

    <UserControl.Resources>
        <Style x:Key="RowHoverStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E66" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#6C63FF" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStyleCentered" TargetType="DataGridCell">
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <Style x:Key="TextBlockCellCentered" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>

        <Style x:Key="ColumnHeaderCentered" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="BorderBrush" Value="#3F3F52" />
            <Setter Property="BorderThickness" Value="0 0 0 1" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="30,20" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Коди двофакторної автентифікації"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="10" />

        <Border Grid.Row="1" Background="#1A1A2C" CornerRadius="8" Padding="10">
            <DataGrid x:Name="TwoFactorCodesDataGrid"
                      ItemsSource="{Binding TwoFactorCodes}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      Background="Transparent"
                      Foreground="White"
                      BorderThickness="0"
                      RowHeight="40"
                      FontSize="14"
                      GridLinesVisibility="None"
                      CanUserResizeColumns="False"
                      RowStyle="{StaticResource RowHoverStyle}"
                      CellStyle="{StaticResource CellStyleCentered}"
                      ColumnHeaderStyle="{StaticResource ColumnHeaderCentered}"
                      ScrollViewer.VerticalScrollBarVisibility="Disabled"
                      ScrollViewer.CanContentScroll="False">
                <DataGrid.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
                    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent" />
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID коду"
                                        Binding="{Binding CodeID}"
                                        ElementStyle="{StaticResource TextBlockCellCentered}"
                                        Width="*" />
                    <DataGridTextColumn Header="ID користувача"
                                        Binding="{Binding UserID}"
                                        ElementStyle="{StaticResource TextBlockCellCentered}"
                                        Width="*" />
                    <DataGridTextColumn Header="Код"
                                        Binding="{Binding Code}"
                                        ElementStyle="{StaticResource TextBlockCellCentered}"
                                        Width="*" />
                    <DataGridTextColumn Header="Дійсний до"
                                        Binding="{Binding ExpiresAt, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}"
                                        ElementStyle="{StaticResource TextBlockCellCentered}"
                                        Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>