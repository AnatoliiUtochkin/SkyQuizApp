<Window x:Class="SkyQuizApp.Views.Teacher.StudentActivityWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Активність студента - SkyQuizApp"
        Height="500"
        Width="850"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="Montserrat"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <Style x:Key="CenteredTextStyle" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Window.Resources>

    <Border CornerRadius="10" BorderThickness="2" BorderBrush="{StaticResource MainBorderBrush}" Background="{StaticResource MainBackgroundBrush}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal"
                        FlowDirection="RightToLeft"
                        Background="Transparent"
                        Height="45"
                        HorizontalAlignment="Right">
                <Button x:Name="btnClose"
                        Content="x"
                        Click="btnClose_Click"
                        BorderThickness="0"
                        Foreground="{StaticResource WhiteTextBrush}"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Margin="10,0,5,3">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource AccentPinkBrush}" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource AccentPinkHoverBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="22" Height="22" CornerRadius="20" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="btnMinimize"
                        Content="-"
                        Click="btnMinimize_Click"
                        BorderThickness="0"
                        Foreground="{StaticResource WhiteTextBrush}"
                        FontSize="16"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Margin="5,0,5,3">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource AccentBlueBrush}" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource AccentBlueHoverBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="20" Height="20" CornerRadius="20" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <TextBlock Text="{Binding StudentEmail}"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White"
                       Grid.Row="0"
                       Margin="0,45,0,15" />

            <Border Grid.Row="1" Background="#1E1E2F" CornerRadius="8" Padding="1">
                <DataGrid ItemsSource="{Binding Results}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          RowHeight="45"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          BorderThickness="0"
                          Background="Transparent"
                          Foreground="White"
                          FontSize="14"
                          HorizontalGridLinesBrush="#333"
                          VerticalGridLinesBrush="#333"
                          ColumnHeaderHeight="40"
                          AlternatingRowBackground="#262638"
                          RowBackground="#1E1E2F"
                          ScrollViewer.VerticalScrollBarVisibility="Hidden"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          HorizontalAlignment="Stretch">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#2C2F48" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                            <Setter Property="Padding" Value="10,4" />
                            <Setter Property="BorderThickness" Value="0" />
                        </Style>

                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Padding" Value="10,4" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="Background" Value="Transparent" />
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Назва тесту"
                                            Binding="{Binding TestTitle}"
                                            ElementStyle="{StaticResource CenteredTextStyle}"
                                            Width="*" />
                        <DataGridTextColumn Header="Дата проходження"
                                            Binding="{Binding CompletedAt, StringFormat=yyyy-MM-dd HH:mm}"
                                            ElementStyle="{StaticResource CenteredTextStyle}"
                                            Width="180" />
                        <DataGridTextColumn Header="Оцінка (%)"
                                            Binding="{Binding Score}"
                                            ElementStyle="{StaticResource CenteredTextStyle}"
                                            Width="120" />
                        <DataGridTextColumn Header="Оцінка (12 б.)"
                                            Binding="{Binding Grade12}"
                                            ElementStyle="{StaticResource CenteredTextStyle}"
                                            Width="120" />
                        <DataGridTextColumn Header="Оцінка (100 б.)"
                                            Binding="{Binding Grade100}"
                                            ElementStyle="{StaticResource CenteredTextStyle}"
                                            Width="120" />
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Border>
</Window>