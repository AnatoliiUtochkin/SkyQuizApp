<Window x:Class="SkyQuizApp.Views.Teacher.TeacherMainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="SkyQuizApp" Height="700" Width="1300"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">

    <Border CornerRadius="12" BorderThickness="1">
        <Border BorderBrush="{StaticResource MainBorderBrush}"
                Background="{StaticResource MainBackgroundBrush}"
                BorderThickness="2"
                Opacity="1"
                CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border CornerRadius="10,0,0,10" Grid.Column="0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                            <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0" />
                            <GradientStop Color="{StaticResource primaryBackColor2}" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Height="155" Margin="0,25,0,0" HorizontalAlignment="Center">
                            <Image Source="/Images/logo.png" Height="150" />
                        </StackPanel>

                        <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource menuColor1}" Command="{Binding ShowMyTestsViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Style="{StaticResource menuButtonIcon}" Icon="BookOpen" Tag="{StaticResource menuColor1}" />
                                <TextBlock Text="Мої тести" Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource menuColor2}" Command="{Binding ShowTestResultsViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Style="{StaticResource menuButtonIcon}" Icon="BarChart" Tag="{StaticResource menuColor1}" />
                                <TextBlock Text="Результати тестів" Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource menuColor3}" Command="{Binding ShowActivityLogViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Style="{StaticResource menuButtonIcon}" Icon="List" Tag="{StaticResource menuColor1}" />
                                <TextBlock Text="Журнал активності" Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource menuColor5}" Command="{Binding ShowSettingsViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Style="{StaticResource menuButtonIcon}" Icon="Gear" Tag="{StaticResource menuColor1}" />
                                <TextBlock Text="Налаштування" Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                </Border>
                
                <Border CornerRadius="0,9,9,0" Grid.Column="1">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                            <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0" />
                            <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <ContentControl Content="{Binding CurrentView}" Margin="0,45,0,0" />

                        <StackPanel x:Name="pnlControlBar"
                                    Orientation="Horizontal"
                                    FlowDirection="RightToLeft"
                                    Background="Transparent"
                                    Height="45"
                                    VerticalAlignment="Top"
                                    Panel.ZIndex="1">

                            <Button x:Name="btnClose"
                                    BorderThickness="0"
                                    Content="x"
                                    Foreground="{StaticResource WhiteTextBrush}"
                                    FontSize="12"
                                    FontFamily="Montserrat"
                                    Cursor="Hand"
                                    Click="btnClose_Click"
                                    Margin="15,10,5,3">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="{StaticResource AccentPinkBrush}" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource AccentPinkHoverBrush}" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="22" Height="22" CornerRadius="20" Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button x:Name="btnMinimize"
                                    BorderThickness="0"
                                    Content="-"
                                    Foreground="{StaticResource WhiteTextBrush}"
                                    FontSize="16"
                                    FontFamily="Montserrat"
                                    Cursor="Hand"
                                    Click="btnMinimize_Click"
                                    Margin="5,10,5,3">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="{StaticResource AccentBlueBrush}" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource AccentBlueHoverBrush}" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="20" Height="20" CornerRadius="20" Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Border>
</Window>