<UserControl x:Class="SkyQuizApp.Views.Student.Tabs.MyResultsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             Background="Transparent">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Мої тести"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="White"
                       Margin="0,0,0,20" />

            <ItemsControl ItemsSource="{Binding StudentTests}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#2C2F48"
                                CornerRadius="10"
                                Padding="15"
                                Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock Text="{Binding TestTitle}"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="White" />
                                    <TextBlock Text="{Binding SummaryInfo}"
                                               FontSize="14"
                                               Foreground="#CCC"
                                               Margin="0,5,0,0" />
                                </StackPanel>

                                <Button Grid.Column="1"
                                        Command="{Binding DataContext.ShowTestAttemptsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding TestID}"
                                        Width="40"
                                        Height="40"
                                        Background="#6C5DD3"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        ToolTip="Деталі"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="20"
                                                    Width="40"
                                                    Height="40">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <fa:IconImage Icon="List" Width="16" Height="16" Foreground="White" />
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>