<Window x:Class="SkyQuizApp.Views.Student.TestResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Результат тесту - SkyQuizApp"
        Width="600"
        Height="400"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2F"
        Foreground="White"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Border Margin="20" CornerRadius="10" Background="#2C2F48" Padding="20">
        <StackPanel VerticalAlignment="Center">

            <TextBlock Text="Результат тесту" FontSize="24" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20" />

            <TextBlock Text="{Binding ScorePercentText}" FontSize="20" FontWeight="SemiBold" Margin="0,5" />
            <TextBlock Text="{Binding Score12Text}" FontSize="18" Margin="0,5" />
            <TextBlock Text="{Binding LetterGradeText}" FontSize="18" Margin="0,5" />

            <TextBlock TextWrapping="Wrap" TextAlignment="Center" Margin="0,20,0,0"
                       FontSize="14" Foreground="LightGray">
                Ви отримали загальну оцінку за тест. Детальний аналіз ваших відповідей та правильність кожного питання можна переглянути у вкладці «Мої результати».
            </TextBlock>

            <Button Content="OK"
                    Width="200"
                    Height="35"
                    Background="#6C5DD3"
                    Foreground="White"
                    BorderThickness="0"
                    Margin="0,40,0,0"
                    HorizontalAlignment="Center"
                    Click="Ok_Click" />
        </StackPanel>
    </Border>
</Window>