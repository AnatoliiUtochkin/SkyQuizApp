            <Window x:Class="SkyQuizApp.Views.Student.StudentMainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="SkyQuizApp" Height="700" Width="1300"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentPinkBrush}" />
            <Setter Property="Foreground" Value="{StaticResource WhiteTextBrush}" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontFamily" Value="Montserrat" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Width="22" Height="22" CornerRadius="20" Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentPinkHoverBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MinimizeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBlueBrush}" />
            <Setter Property="Foreground" Value="{StaticResource WhiteTextBrush}" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontFamily" Value="Montserrat" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Width="20" Height="20" CornerRadius="20" Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentBlueHoverBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12" BorderThickness="1">
        <Border BorderBrush="{StaticResource MainBorderBrush}"
                Background="{StaticResource MainBackgroundBrush}"
                BorderThickness="2"
                Opacity="1"
                CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border CornerRadius="10,0,0,10" Grid.Column="0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                            <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0" />
                            <GradientStop Color="{StaticResource primaryBackColor2}" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Height="155" Margin="0,25,0,0" HorizontalAlignment="Center">
                            <Image Source="/Images/logo.png" Height="150" />
                        </StackPanel>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Command="{Binding ShowJoinTestViewCommand}"
                                     Tag="{StaticResource menuColor1}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="ClipboardList" Style="{StaticResource menuButtonIcon}" />
                                <TextBlock Text="Приєднатись до тесту" Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Command="{Binding ShowMyResultsViewCommand}"
                                     Tag="{StaticResource menuColor2}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="CheckCircle" Style="{StaticResource menuButtonIcon}" />
                                <TextBlock Text="Мої результати" Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Command="{Binding ShowStatisticsViewCommand}"
                                     Tag="{StaticResource menuColor3}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="BarChart" Style="{StaticResource menuButtonIcon}" />
                                <TextBlock Text="Статистика" Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Command="{Binding ShowSettingsViewCommand}"
                                     Tag="{StaticResource menuColor4}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Cog" Style="{StaticResource menuButtonIcon}" />
                                <TextBlock Text="Налаштування" Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" CornerRadius="0,10,10,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                            <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0" />
                            <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="45" />
                            <RowDefinition Height="35" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal"
                                    Grid.Row="0"
                                    FlowDirection="RightToLeft"
                                    Background="Transparent">
                            <Button Content="x"
                                    Click="btnClose_Click"
                                    Cursor="Hand"
                                    Margin="15,10,5,3"
                                    Style="{StaticResource CloseButtonStyle}" />

                            <Button Content="-"
                                    Click="btnMinimize_Click"
                                    Cursor="Hand"
                                    Margin="5,10,5,3"
                                    Style="{StaticResource MinimizeButtonStyle}" />
                        </StackPanel>

                        <ContentControl Grid.Row="2" Content="{Binding CurrentView}" />
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Border>
</Window>