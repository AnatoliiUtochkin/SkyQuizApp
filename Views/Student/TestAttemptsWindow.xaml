<Window x:Class="SkyQuizApp.Views.Student.TestAttemptsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        Title="Перегляд спроб - SkyQuizApp"
        Height="550" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#D94F4F" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontFamily" Value="Montserrat" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Width="22" Height="22" CornerRadius="20" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF6B6B" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MinimizeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4B7BE5" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontFamily" Value="Montserrat" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Width="20" Height="20" CornerRadius="20" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6B97FF" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#6C5DD3" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="10,4" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#807AFF" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12" BorderThickness="2" BorderBrush="#6C5DD3">
        <Border.Background>
            <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                <GradientStop Color="#2A2D43" Offset="0" />
                <GradientStop Color="#1E1E2E" Offset="1" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="45" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal"
                        Grid.Row="0"
                        FlowDirection="RightToLeft"
                        Background="Transparent">
                <Button Content="x"
                        Click="Close_Click"
                        Style="{StaticResource CloseButtonStyle}"
                        Background="{StaticResource AccentPinkBrush}"
                        Margin="15,10,5,3" />
                <Button Content="-"
                        Click="Minimize_Click"
                        Style="{StaticResource MinimizeButtonStyle}"
                        Background="{StaticResource AccentBlueBrush}"
                        Margin="5,10,5,3" />
            </StackPanel>

            <TextBlock Grid.Row="1"
                       Text="Спроби тесту"
                       FontSize="26"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,20" />

            <ScrollViewer Grid.Row="2"
                          VerticalScrollBarVisibility="Hidden"
                          HorizontalScrollBarVisibility="Disabled"
                          Margin="20,0,20,20">
                <ItemsControl ItemsSource="{Binding Attempts}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#2C2F48"
                                    CornerRadius="10"
                                    Padding="15"
                                    Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <TextBlock Text="{Binding AttemptDate}"
                                                   FontSize="16"
                                                   Foreground="White"
                                                   FontWeight="Bold" />
                                        <TextBlock Text="{Binding Score, StringFormat=Результат: {0:F1}%}"
                                                   FontSize="14"
                                                   Foreground="#CCCCCC"
                                                   Margin="0,5,0,0" />
                                    </StackPanel>

                                    <Button Grid.Column="1"
                                            Content="Перегляд"
                                            Style="{StaticResource RoundedButtonStyle}"
                                            Width="100"
                                            Height="32"
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            Command="{Binding DataContext.ReviewAttemptCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding TestSessionID}" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>